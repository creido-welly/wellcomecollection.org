{
  "@title": "Image galleries",
  "@repeatable": true,
  "Main" : {
    "title" : {
      "type" : "StructuredText",
      "config" : {
        "single" : "heading1",
        "label" : "Title"
      }
    },
    "description" : {
      "type" : "StructuredText",
      "config" : {
        "multi" : "paragraph, strong, em, hyperlink",
        "label" : "Description"
      }
    },
    "media" : {
      "fieldset" : "Images",
      "type" : "Slices",
      "config" : {
        "choices" : {
          "editorialImage" : {
            "type" : "Slice",
            "fieldset" : "Editorial image",
            "non-repeat" : {
              "caption" : {
                "type" : "StructuredText",
                "config" : {
                  "single" : "hyperlink, bold, em",
                  "label" : "Caption"
                }
              },
              "image" : {
                "type" : "Image",
                "config" : {
                  "label" : "Image"
                }
              }
            }
          }
        }
      }
    }
  }
}