{% set fromDate = dateRange[0] %}
{% set toDate = dateRange[1] %}

<p class="{{- [
  {s:'HNM4', m:'HNM4'} | fontClasses,
  {s:0} | spacingClasses({margin: ['top']}),
  {s:1} | spacingClasses({margin: ['bottom']})
].join(' ') -}}">
  {% if period == 'today' %}
    <time datetime="{{ fromDate }}">{{ fromDate | formatDate }}</time>
  {% elseif period == 'this-weekend' %}
    <time datetime="{{ fromDate }}">{{ fromDate | formatDay }}</time>&ndash;<time datetime="{{ toDate }}">{{ toDate | formatDay }}</time>
  {% elseif period == 'current-and-coming-up' %}
    From <time datetime="{{ fromDate }}">{{ fromDate | formatDate }}</time>
  {% endif %}
</p>

{% if not listHeader.todayOpeningHours.opens and period === 'today' %}
  <p class="{{ {s:'WB6', m:'WB5', l:'WB4'} | fontClasses }} {{{s:2} | spacingClasses({margin: ['bottom']})}}">Our exhibitions are closed today, but our <a href="{{cafePromo.url}}">caf√©</a> and <a href="{{shopPromo.url}}">shop</a> are open for your visit.</p>
  <div class="{{ {s:3, m:4, l:5} | spacingClasses({margin: ['top', 'bottom']}) }}">
    {% componentV2 'divider', null, {'dashed': true} %}
  </div>
{% endif %}
