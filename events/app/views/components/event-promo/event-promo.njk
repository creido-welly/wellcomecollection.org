{% set sizes = data.sizes if data.sizes else '100vw' %}

<a id="{{ model.id }}" href="{{ model.url }}" class="promo">
  <div class="promo__image-container">
    {% componentV2 'image', model.image, {}, {lazyload: true, sizesQueries: sizes, defaultSize: data.defaultSize} %}
  </div>
  <div class="promo__description font-HNL5-s">
    <div class="promo__heading">
      <h2 class="promo__title font-WB6-s">{{ model.title }}</h2>
    </div>
    <span class="promo__copy">{{ model.description | striptags | safe }}</span>
  </div>
</a>
