<div class="event-schedule row relative">
  <div class="absolute event-schedule__header-image">
    {% componentJsx 'Image', {
      width: 1600,
      height: 600,
      contentUrl: 'http://placebeyonce.com/1600-600',
      lazyload: true
    } %}
  </div>
  <div class="relative container bg-white {{ {s: 2} | spacingClasses({margin: ['bottom']}) }} {{ {s:3, m:5, l:5} | spacingClasses({padding: ['top', 'bottom']}) }} }}">
    <div class="grid">
      <div class="{{ {s: 12, m: 8, l: 8, xl: 9} | gridClasses }}">
        <h1 class="{{ {s: 'WB5', m: 'WB4', l: 'WB3'} | fontClasses }} {{ {s: 2} | spacingClasses({margin: ['bottom']}) }} {{ {s: 0} | spacingClasses({margin: ['top']}) }} font-purple">{{  event.title }}</h1>
        {{ event.description | safe }}
      </div>
    </div>
  </div>

  <div class="container bg-white {{ {s: 6} | spacingClasses({padding: ['bottom']}) }}">
    <div class="grid {{ {s: 5} | spacingClasses({padding: ['top']}) }} {{ {s: 2} | spacingClasses({padding: ['bottom']}) }}">
      <div class="{{ {s: 12, m: 8, l: 9, xl: 9} | gridClasses }}">
        <h2 class="no-margin inline-block {{ {s: 'WB7', m: 'WB5'} | fontClasses }} {{ {s: 2} | spacingClasses({padding: ['right']}) }} font-purple">
        {{ event.times[0].range.startDateTime | formatDate }}, {{ event.times[0].range.startDateTime | formatTime }}&mdash;{{ event.times[0].range.endDateTime | formatTime }}</h2>
        <span class="event-schedule__amount {{ {s: 'WB7', m: 'WB6'} | fontClasses }}">{{ event.schedule.length }} events</span>
      </div>
      <div class="event-schedule__free {{ {s: 12, m: 4, l: 3, xl: 3} | gridClasses }} {{ {s: 2} | spacingClasses({margin: ['top']}) }} {{ {m: 0} | spacingClasses({margin: ['top']}) }}">
        <span class="inline-block bg-yellow {{ {s: 'HNM5', l: 'HNM4'} | fontClasses }} {{ {s: 2} | spacingClasses({padding: ['left', 'right']}) }} {{ {s: 1} | spacingClasses({padding: ['top', 'bottom']}) }}">All events are free</span>
      </div>
    </div>
    <hr class="divider divider--thin divider--pumice" />

    <div class="grid">
      <div class="{{ {s: 12, m: 12, l: 12, xl: 12} | gridClasses }}">
        <ul class="plain-list no-marin no-padding">
          {% for scheduledEvent in event.schedule %}
            {% componentJsx 'EventScheduleItem',
              {
                event: {
                  times: scheduledEvent.times,
                  title: scheduledEvent.title,
                  format: scheduledEvent.format,
                  isDropIn: scheduledEvent.isDropIn,
                  description: scheduledEvent.promo.caption,
                  interpretations: scheduledEvent.interpretations
                },
                eventInfo: {
                  eventbriteId: null,
                  isCompletelySoldOut: null
                }
              }
            %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>
