{
  "name": "wellcomecollection.org-server",
  "version": "0.0.0",
  "description": "The node server serving content for wellcomecollection.org",
  "main": "app.js",
  "scripts": {
    "test": "ava",
    "test:watch": "ava --watch",
    "test:accessibility": "pa11y",
    "test:browsers": "node ./browserstack/browserstack.js",
    "optimise:svg": "node ./optimise-svgs.js",
    "dev": "concurrently 'npm run compile:watch' 'npm run start:watch'",
    "fractal": "fractal start â€”sync --port 3002",
    "fractal-build": "fractal build",
    "app:dev": "nodemon app.js -e js,njk --exec babel-node",
    "app:build": "babel . -d .dist --ignore=node_modules",
    "app:start": "pm2 start ./.dist/app.js --name 'wellcomecollection.org'",
    "app:docker": "pm2-docker ./.dist/app.js --name 'wellcomecollection.org'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wellcometrust/wellcomecollection.org/tree/master/server"
  },
  "author": "wellcomecollection.dev@wellcome.ac.uk",
  "license": "MIT",
  "dependencies": {
    "@frctl/fractal": "^1.0.11",
    "@frctl/nunjucks": "https://github.com/gestchild/nunjucks/tarball/66b327d3c9ac24f97784332c09669336fe4c650a",
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-preset-env": "^1.1.8",
    "immutable": "^3.8.1",
    "koa": "^2.0.0",
    "koa-router": "^7.1.0",
    "koa-static": "^3.0.0",
    "nunjucks": "^3.0.0",
    "parse5": "^3.0.1",
    "pm2": "^2.1.5",
    "superagent": "^3.3.1",
    "svgo": "^0.7.1",
    "webpack": "^2.1.0-beta.27"
  },
  "devDependencies": {
    "browserstack": "^1.5.0",
    "browserstack-local": "^1.3.0",
    "concurrently": "^3.1.0",
    "nodemon": "^1.10.2",
    "open": "0.0.5",
    "pa11y": "^4.2.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-3"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
