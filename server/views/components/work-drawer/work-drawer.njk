{% extends 'components/drawer/drawer.njk' %}

{% block drawerHeader %}
  {% if data.topDivider %}
    {% componentJsx 'Divider', { modifiers: {'black': true, 'keyline': true}, extraClasses: [{s:1} | spacingClasses({margin: ['top', 'bottom']})]  } %}
  {% endif %}
  {{ super() }}
{% endblock %}

{% block drawerBody %}
  {% for item in data.data %}
    <div class="{{ {s:4} | spacingClasses({margin: ['bottom']}) }}">
      {% componentJsx 'MetaUnit', {headingText: item.title, text: item.content} %}
    </div>
  {% endfor %}
{% endblock %}

{% block drawerDivider %}
  {{ super() }}
{% endblock %}
