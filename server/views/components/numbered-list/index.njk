<div class="numbered-list{% for modifier in modifiers %} numbered-list--{{modifier}}{% endfor %}">
  <header class="numbered-list__header">
    <h2 class="numbered-list__heading">{{ model.name }}</h2>
  </header>
  <ol class="numbered-list__list">
    {% for item in model.items %}
      <li class="numbered-list__item">
      {% if item.url %}
        <a href="{{ item.url }}" class="numbered-list__link">
      {% endif %}
          <span class="numbered-list__number" aria-hidden="true">{{ loop.index }}</span>
          <h3 class="numbered-list__title">{{ item.title }}</h3>
          <p class="numbered-list__meta">{{ item.meta }}</p>
      {% if item.url %}
        </a>
      {% endif %}
      </li>
    {% endfor %}
  </ol>
</div>
