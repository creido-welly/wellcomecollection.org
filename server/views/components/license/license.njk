<div class="flex flex--v-center">
  {% if model.license === 'copyright-not-cleared' %}
    Copyright Not Cleared
  {% endif %}
  {% if model.license === 'PDM' %}
    {% icon 'other/cc_pdm', null, ['icon--2x'] %}
    <a rel="license" class="{{ {s:'LR2' , m:'LR2', l:'LR2', xl:'LR2'} | fontClasses }}" href="https://creativecommons.org/publicdomain/mark/1.0/">Creative Commons License, {{model.license}}</a>
  {% endif %}
  {% if model.license === 'CC0' %}
    {% icon 'other/cc_zero', null, ['icon--2x'] %}
    <a rel="license" class="{{ {s:'LR2' , m:'LR2', l:'LR2', xl:'LR2'} | fontClasses }}" href="https://creativecommons.org/publicdomain/zero/1.0/">Creative Commons License, {{model.license}}</a>
  {% endif %}
  {% if model.license === 'CC-BY' %}
    {% icon 'other/cc', null, ['icon--2x'] %}
    {% icon 'other/cc_by', null, ['icon--2x'] %}
    <a rel="license" class="{{ {s:'LR2' , m:'LR2', l:'LR2', xl:'LR2'} | fontClasses }}" href="https://creativecommons.org/licenses/by/4.0/">Creative Commons License, {{model.license}}</a>
  {% endif %}
  {% if model.license === 'CC-BY-NC' %}
    {% icon 'other/cc', null, ['icon--2x'] %}
    {% icon 'other/cc_by', null, ['icon--2x'] %}
    {% icon 'other/cc_nc', null, ['icon--2x'] %}
    <a rel="license" class="{{ {s:'LR2' , m:'LR2', l:'LR2', xl:'LR2'} | fontClasses }}" href="https://creativecommons.org/licenses/by-nc/4.0/">Creative Commons License, {{model.license}}</a>
  {% endif %}
  {% if model.license === 'CC-BY-NC-ND' %}
    {% icon 'other/cc', null, ['icon--2x'] %}
    {% icon 'other/cc_by', null, ['icon--2x'] %}
    {% icon 'other/cc_nc', null, ['icon--2x'] %}
    {% icon 'other/cc_nd', null, ['icon--2x'] %}
    <a rel="license" class="{{ {s:'LR2' , m:'LR2', l:'LR2', xl:'LR2'} | fontClasses }}" href="https://creativecommons.org/licenses/by-nc-nd/4.0/">Creative Commons License, {{model.license}}</a>
  {% endif %}
</div>
