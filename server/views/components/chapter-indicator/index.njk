<div aria-label="part {{ model.number }} of {{ model.total }}" class="chapter-indicator chapter-indicator--{{ model.color }} {% for modifier in modifiers %}chapter-indicator--{{ modifier }} {% endfor %}">
  {% for chapter in range(0, model.total) %}
    <div class="chapter-indicator__bar {{ 'chapter-indicator__bar--filled' if loop.index <= model.number }}"></div>
  {% endfor %}
</div>
