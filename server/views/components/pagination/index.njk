<div class="pagination float-r flex-inline flex--center text--meta {{ {s:2, m:2, l:2} | spacingClasses('margin', 'top') }} {{ {s:2, m:2, l:2} | spacingClasses('margin', 'bottom') }}">
  {% if (model.prevPage) %}
    <a href="?page={{ model.prevPage }}" rel="prev" class="{{ {s:2, m:2, l:2} | spacingClasses('margin', 'right') }}">
      <div class="icon-rounder flex flex--center">
        {% icon 'actions/arrow-big', 'Previous (page '+ model.prevPage +')', ['icon--90', 'icon--2x', 'h-center'] %}
      </div>
    </a>
  {% endif %}

  <span>Page {{ model.currentPage }} of {{ model.pageCount }}</span>

  {% if (model.nextPage) %}
    <a href="?page={{ model.nextPage }}" rel="next" class="{{ {s:2, m:2, l:2} | spacingClasses('margin', 'left') }}">
      <div class="icon-rounder flex flex--center">
        {% icon 'actions/arrow-big', 'Next (page '+ model.nextPage +')', ['icon--270', 'icon--2x', 'h-center'] %}
      </div>
    </a>
  {% endif %}
</div>
