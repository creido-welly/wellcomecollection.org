<div class="header js-header">
  <div class="header__upper-wrap">
    <div class="header__upper container">
      <a href="#" class="header__brand">
        <img class="header__logo" src="https://wellcomecollection.org/sites/all/themes/col_base/images/wellcomecollection-logo.svg" />
      </a>
      <form class="header__search js-search">
        <input class="header__input js-search-input js-show-hide-drawer" type="text" placeholder="Search" />
        <button class="header__button js-show-hide-trigger">Search</button>
      </form>
    </div>
  </div>
  <div class="header__lower container js-show-hide js-header-lower">
    <a href="#"
      class="header__burger-trigger js-show-hide-trigger"
      aria-controls="header-nav">
      <span></span>
      <span></span>
      <span></span>
    </a>
    <nav id="header-nav" class="header__nav js-header-nav">
      <ul class="header__list">
        {% for navLink in navLinks %}
          <li class="header__item js-show-hide {{ "is-current" if navLink.isCurrent }}">
            <a href="{{ navLink.url }}"
              class="header__link js-show-hide-trigger"
              aria-controls="{{ navLink.subnavId }}">{{ navLink.title }}</a>
            <div class="header__dropdown grid grid--breakout js-show-hide-drawer">
              <div class="grid__cell">
                <div class="grid container header__container">
                  <nav id="{{ navLink.subnavId }}" class="grid__cell header__subnav">
                    <ul class="header__subnav-list">
                      {% if navLink.subnavLinks %}
                        {% for subnavLink in navLink.subnavLinks %}
                          <li class="header__subnav-item">
                            <a href="{{ subnavLink.url }}" class="header__subnav-link">{{ subnavLink.title }}</a>
                          </li>
                        {% endfor %}
                      {% endif %}
                    </ul>
                  </nav>
                  <div class="grid__cell">
                    {# TODO: add e.g cards here #}
                  </div>
                </div>
              </div>
            </div>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</div>
