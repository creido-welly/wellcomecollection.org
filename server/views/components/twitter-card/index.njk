<meta name="twitter:card" content="summary" />
<meta name="twitter:url" content="{{ site.url }}{{ article.url }}" />
<meta name="twitter:site" content="{{ site.twitterHandle }}" />
<meta name="twitter:title" content="{{ article.headline }}" />
<meta name="twitter:description" content="{{ article.description | striptags | safe | truncate(200) }}" />
<meta name="twitter:image" content="{{ article.thumbnail.contentUrl }}?w=600" />
{#<meta name="twitter:image:alt" content=" {{ article.thumbnailAlt }}" />#}{# not available from wordpress #}
