<blockquote class="quote {{ data.fontStyles | fontClasses if data.fontStyles }} {{ 'quote' | componentClasses(modifiers) }}">
  {{ model.body }}
  {% if model.footer %}
    <footer class="quote__footer {{ 'HNM5' | fontClasses }}">
      <cite class="quote__cite {{ 'HNL5' | fontClasses }}">{{ model.footer }}</cite>
    </footer>
  {% endif %}
</blockquote>
