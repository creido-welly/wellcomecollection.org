<div class="font">
  <h1 class="font__name">{{ font.font__name }}</h1>
  <p class="font__example--{{ font.font__name }}">{{ font.font__example }}</p>
  <dl class="font__properties">
    <dt class="font__property">Font-size:</dt>
    <dd class="font__value">{{ font.font__size }}</dd>
    <dt class="font__property">Letter-spacing:</dt>
    <dd class="font__value">{{ font.letter__spacing }}</dd>
    <dt class="font__property">Line-height:</dt>
    <dd class="font__value">{{ font.line__height }}</dd>
  </dl>
  <h2 class="font__usage-title">Usage:</h2>
  <p class="font__usage-text">{{ font.usage__text}}</p>
</div>
