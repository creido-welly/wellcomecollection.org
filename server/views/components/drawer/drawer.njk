    {% block header %}
      {% componentV2 headerComponent.name, headerComponent.model, headerComponent.data %}
    {% endblock %}
  </button>
  <div class="drawer__body js-show-hide-drawer">
    {% block body %}
      {% componentV2 bodyComponent.name, bodyComponent.model, bodyComponent.data %}
    {% endblock %}
  </div>
</div>
