<figure class="{{- [
  {s:0} | spacingClasses({margin: ['top', 'left', 'right' ]}),
  {s:3} | spacingClasses({margin: ['bottom']})
  ].join(' ') }} js-gif-video gif-video no-margin"
  data-playback-rate="{{ model.playbackRate }}">
  <div class="gif-video__inner relative">
    <video class="gif-video__video block js-gif-video__video"
      preload="metadata"
      muted
      loop
      playsinline>
      <source src="{{ model.videoUrl }}" type="video/mp4">
      <p>Your browser doesn't support video</p>
    </video>
    <button class="no-margin no-padding plain-button gif-video__play-pause absolute js-gif-video__play-pause is-hidden"
      aria-label="play/pause button"
      data-track-label="{{ model.videoUrl }}">
      <span class="{{ {s:'LR3'} | fontClasses }} js-gif-video__text gif-video__text block"></span>
    </button>
    {% if (model.tasl.title or model.tasl.sourceName or model.tasl.copyrightHolder or model.tasl.license) %}
      {% componentJsx 'Tasl', model.tasl %}
    {% endif %}
  </div>
  {% if model.caption %}
    <figcaption class="gif-video__caption border-bottom-width-1 flex-inline border-color-pumice {{ {s:'LR3', m:'LR2'} | fontClasses }} {{ {s:3} | spacingClasses({padding: ['top', 'bottom']}) }} ">
      {% icon 'image',  null, ['margin-right-s1', 'float-l'] %}{{ model.caption | safe }}
    </figcaption>
  {% endif %}
</figure>
