{% if model.queryString %}
  <div class="row is-hidden-s is-hidden-m">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:12} | gridClasses }}">
          {% set returnHref = '/works' + model.queryString + '#' + model.id %}
          {% set returnTracking = '{"category": "component", "action": "return-to-results:click", "label": "id:' + model.id + ', query:' + model.queryString + ', title:' + model.trackTitle +'"}' %}
          <a class="flex-inline flex-v-center {{ {s:'HNM4'} | fontClasses }} plain-link font-green font-hover-cyan {{ {s:1} | spacingClasses({margin: ['top', 'bottom']}) }} " href="{{returnHref}}" data-track-event="{{returnTracking}}">
            {% icon 'arrow', null, ['icon--green icon--180'] %}
            <span class="{{ {s:1} | spacingClasses({margin: ['left']}) }}">Search results</span>
          </a>
        </div>
      </div>
    </div>
  </div>
{% endif %}
<div class="row bg-black work-media js-work-media">
  <div class="pointer-events-none">
    {% componentV2 'scroll-to-info', {elementId: 'work-info'}, {'work': true}, {extraClasses: ['flush-container-right','js-work-media-control', 'pointer-events-all'], extraIconClasses: ['icon--white']} %}
  </div>

  <div class="work-media__image-container">
    {% componentV2 'image', model.iiifModel, {}, model.iiifData %}
  </div>

  {% if featuresCohort | isFlagEnabled('zoomImages', featureFlags) %}
    {% componentV2 'image-viewer', {imageUrl: model.iiifModel.contentUrl}, null, {id: model.id, trackTitle: model.trackTitle} %}
  {% endif %}
</div>
