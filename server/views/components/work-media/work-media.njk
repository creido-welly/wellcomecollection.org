<div class="row bg-black work-media js-work-media">
  <div class="work-media__overlay">
    {% if model.queryString %}
      <div class="container work-media__return {{ {s:2} | spacingClasses({padding: ['top', 'bottom']}) }}">
        {% componentV2 'return-to-results', {queryString: model.queryString}, null, {extraClasses: ['js-work-media-control']} %}
      </div>
    {% endif %}

    {% componentV2 'scroll-to-info', {elementId: 'work-info'}, {'work': true}, {extraClasses: ['js-work-media-control'], extraInformationIconClasses: ['icon--2x', 'icon--white'], extraChevronIconClasses: ['icon--white']} %}
  </div>

  {% componentV2 'image-iiif', model.iiifModel, {test: true}, model.iiifData %}
</div>
