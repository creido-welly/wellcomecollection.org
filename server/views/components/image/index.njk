{% set sizes = model | getImageSizesFor %}
{% set comma = joiner() %}
<img class="image{{ ' lazyload' if data.lazyload }} {{ 'image--clip-mask' if data.clipMask }}"
src="{{ model.contentUrl }}?w={{ sizes[0] }}"
data-srcset="
{%- for size in sizes -%}
  {{ comma() }}{{ model.contentUrl }}?w={{ size }} {{ size }}w
{%- endfor %}"
{% if data.sizesQueries %}
  sizes="{{ data.sizesQueries }}"
{% endif %}
alt="{{ model.caption | striptags() if model.caption }}" />
