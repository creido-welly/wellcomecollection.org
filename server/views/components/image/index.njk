{% set sizes = model | getImageSizesFor %}
{% set comma = joiner() %}

<img data-width="{{model.width}}" data-height="{{model.height}}" class="image{{ ' lazyload' if data.lazyload }} {{ 'image--clip-mask' if data.clipMask }}"
src="{{ model.contentUrl }}?w={{ sizes[0] }}"
data-srcset="
{%- for size in sizes -%}
  {{ comma() }}{{ model.contentUrl }}?w={{ size }} {{ size }}w
{%- endfor %}"
{% if data.sizesQueries %}
  sizes="{{ data.sizesQueries }}"
{% else %}
  sizes="100vw"
{% endif %}
{% if model.copyright %}
  data-copyright="{{ model.copyright }}"
{% endif %}
alt="{% if model.alt %} {{ model.alt | striptags() }}{% elif model.caption %} {{ model.caption | striptags() }}{% endif %}" />
