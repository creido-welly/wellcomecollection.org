{% extends 'layout/default.njk' %}

{% block pageMeta %}
  {% set metaContent = {
    type: 'website',
    title: list.name,
    image: list.items.first().image.contentUrl,
    url: pageConfig.canonicalUri,
    description: list.description
  } %}
  {% component 'open-graph', { pageConfig: pageConfig, metaContent: metaContent } %}
  {% component 'twitter-card', { pageConfig: pageConfig, metaContent: metaContent } %}

  <meta name="description" content="{{ list.description }}" />
{% endblock %}

{% block body %}
   <script type="application/ld+json">
    [{% for promo in list.items.toJS() %}
      {% set promoJsonLd = promo | objectAssign({headline: promo.title, thumbnail: promo.image}) %}
      {{ promoJsonLd | jsonLd('contentLd') | safe }}{{ ',' if not loop.last }}
    {% endfor %}]
  </script>

  {% componentV2 'list-header', {name: list.name, description: list.description, total: list.total} %}

  {% if pagination %}
    <div class="row">
      <div class="container">
        <div class="grid">
          <div class="{{ {s:12, m:12, l:12} | gridClasses }}">
            <div class="{{ {s:5, m:5, l:5} | spacingClasses({padding: ['top']}) }}  {{ {s:5, m:5, l:5} | spacingClasses({padding: ['bottom']}) }} flex flex--v-center font-pewter {{ {s:'LR3', m:'LR2'} | fontClasses }}">
              {{ pagination.range.beginning }} - {{ pagination.range.end }}
            </div>
          </div>
        </div>
        {% componentV2 'divider', null, {'keyline': true, 'pumice': true} %}
      </div>
    </div>
  {% endif %}

  <div class="row {{ {s:4, m:4, l:4} | spacingClasses({padding: ['top']}) }} ">
    <div class="container">
      <div class="grid">
        {% for promo in list.items.toJS() %}
          <div class="{{ {s:12, m:6, l:3, xl:3} | gridClasses }}">
            {% componentJsx 'Promo', {
              sizes: '(min-width: 1420px) 282px, (min-width: 960px) calc(21.36vw - 17px), (min-width: 600px) calc(50vw - 54px), calc(100vw - 36px)',
              url: promo.url,
              contentType: promo.contentType,
              image: promo.image,
              title: promo.title,
              weight: promo.weight,
              description: promo.description,
              series: promo.series,
              positionInSeries: promo.positionInSeries
            } %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="row {{ {s:2, m:2, l:2} | spacingClasses({padding: ['top']}) }} {{ {s:3, m:3, l:3} | spacingClasses({padding: ['bottom']}) }} ">
    <div class="container">
      {% if moreLink %}
        <div class="grid">
          <div class="grid__cell text-align-right">
            {% componentJsx 'MoreInfoLink', { url: moreLink, name: 'More articles from the archive' } %}
          </div>
        </div>
      {% else %}
        <div class="grid">
          <div class="grid__cell">
            {% if pagination %}
              {% componentJsx 'Pagination', pagination %}
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
