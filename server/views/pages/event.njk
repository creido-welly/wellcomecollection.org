{% extends 'layout/default.njk' %}

{% block pageMeta %}
  {% component 'open-graph', { pageConfig: pageConfig, article: article } %}
  {% component 'twitter-card', { pageConfig: pageConfig, article: article } %}
  <meta name="description" content="{{ event.description | safe | striptags }}" />
{% endblock %}

{% block body %}
<script type="application/ld+json">
  {{ event | jsonLd('contentLd') | safe }}
</script>
<article>
  <article itemscope itemtype="http://schema.org/Article">
  {% componentV2 'page-description', {
      title: event.title,
      lead: true
    },
    { icon: event.contentType | getIconForContentType }
  %}
  <pre>
    {{event | prettyDump | safe}}
  </pre>
</article>
{% endblock %}
