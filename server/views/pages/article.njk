{% extends "templates/article.njk" %}

{% block articleBody %}
  <div class="grid__cell grid__cell--l6 grid__cell--shift-l1  grid__cell--m8">
    {% for bodyPart in articleBody | parseBody %}
      {% if bodyPart.type === 'image' %}
          {% component 'figure', {
            type: 'picture',
            sources: [{src: bodyPart.value.contentUrl, size: bodyPart.value.width}],
            caption: bodyPart.value.caption,
            icon: 'other/picture'
          } %}
      {% elif bodyPart.type === 'video' %}
          <div class="iframed-video">
            <iframe src="{{ bodyPart.value.embedUrl }}" frameborder="0" class="iframed-video__iframe"></iframe>
          </div>
      {%  else %}
        {{ bodyPart.value | safe }}
      {% endif %}
    {% endfor %}
  </div>
{% endblock %}
