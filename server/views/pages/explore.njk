{% extends 'layout/default.njk' %}

{% block body %}
  {% component 'page-description', { title: 'Explore', modifiers: ['hidden'] } %}
  <div class="row row--no-bottom-padding row--cream row--has-wobbly-background">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:4, m:8, l:12, xl:12} | gridClasses }}">
          {% component 'promo', { promo: topPromo } %}
        </div>
      </div>
    </div>
    <div class="row__wobbly-background"></div>

    <div class="container container--scroll touch-scroll">
      <div class="grid grid--dividers grid--featured">
        {% for promo in second3Promos.toJS() %}
          <div class="{{ {s:4, l:4} | gridClasses }}">
            {% component 'promo', { promo: promo } %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  {# Theme #}
  <div class="row">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:4, m:8, l:12, xl: 12} | gridClasses }}">
          <h2 class="heading--large no-v-margin">A drop in the ocean</h2>
        </div>
        <div class="{{ {s:4, m:8, l:8} | gridClasses }}">
          <p class="no-v-margin">
            This series showcases many different voices and perspectives from people with lived
            experience of mental ill health and explores their ideas of personal asylum through
            sculpture, vlogging, poetry and more.
          </p>
          <a class="more-info-link" href="/theme/a-drop-in-the-ocean">
            {% icon 'actions/arrow-small', null, ['icon--270', 'icon--action'] %}
            <span class="more-info-link__text">More from A drop in the ocean</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="row row--small-top-padding">
    <div class="container">
      <div class="grid">
        {% for promo in aDropInTheOcean.take(3).toJS() %}
          <div class="{{ {s:4, l:4, xl:4} | gridClasses }}">
            {% component 'promo', { promo: promo } %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="row row--no-padding">
    <div class="container container--scroll touch-scroll">
      <div class="grid grid--featured">
        {% for promo in aDropInTheOcean.slice(3, 7).toJS() %}
          <div class="{{ {s:4, m:4, l:3, xl:3} | gridClasses }}">
            {% component 'promo', { promo: promo } %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  {# Chronological #}
  <div class="row">
    <div class="container">
      <div class="grid">
        <div class="{{ {s:4, m:8, l:12, xl: 12} | gridClasses }}">
          <h2 class="heading--large no-v-margin">You may have missed</h2>
        </div>
        <div class="{{ {s:4, m:8, l:8} | gridClasses }}">
          <a class="more-info-link" href="/theme/articles">
            {% icon 'actions/arrow-small', null, ['icon--270', 'icon--action'] %}
            <span class="more-info-link__text">More articles</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="row row--small-top-padding">
    <div class="container">
      <div class="grid">
        {% for promo in next8Promos.toJS() %}
          <div class="{{ {s:4, m:4, l:3, xl:3} | gridClasses }}">
            {% component 'promo', { promo: promo } %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
