{% extends 'layout/default.njk' %}

{% block pageMeta %}
  {% set metaContent = {
    type: 'article',
    title: book.title,
    url: pageConfig.canonicalUri,
    description: book.description
  } %}
  {% component 'open-graph', { pageConfig: pageConfig, metaContent: metaContent } %}
  {% component 'twitter-card', { pageConfig: pageConfig, metaContent: metaContent } %}
  <meta name="description" content="{{ book.description | safe | striptags }}" />
{% endblock %}

{% block body %}

  <script type="application/ld+json">
    {{ book | jsonLd('contentLd') | safe }}
  </script>
  {% componentJsx 'BookPage', { book: book } %}

{% endblock %}
