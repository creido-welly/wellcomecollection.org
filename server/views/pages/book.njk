{% extends 'layout/default.njk' %}

{% set description = book.promo.caption | safe | striptags %}
{% block pageMeta %}
  {% set metaContent = {
    type: 'article',
    title: book.title,
    url: pageConfig.canonicalUri,
    description: description
  } %}
  {% component 'open-graph', { pageConfig: pageConfig, metaContent: metaContent } %}
  {% component 'twitter-card', { pageConfig: pageConfig, metaContent: metaContent } %}
  <meta name="description" content="{{ description }}" />
{% endblock %}

{% block body %}

  <script type="application/ld+json">

  </script>
  {% componentJsx 'BookPage', { book: book } %}

{% endblock %}
